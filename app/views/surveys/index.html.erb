<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Is opened</th>
      <th>Is public</th>
      <th>Is available for all</th>
      <th>Administrator</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= survey.start_date %></td>
        <td><%= survey.end_date %></td>
        <td><%= survey.is_opened %></td>
        <td><%= survey.is_public %></td>
        <td><%= survey.is_available_for_all %></td>
        <td><%= survey.administrator_id %></td>
        <td><%= survey.category_id %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

