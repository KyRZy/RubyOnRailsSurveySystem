<div class="col-xs-12 col-sm-12 col-md-12 col-lg-offset-1 col-lg-10 col-lg-offset-1">
    <%= form_for(@survey, format: :json, html: {:id => 'survey-generator-form',:class => 'panel panel-default'} ) do |f| %>

        <div id="survey-generator">
            <div id="survey-name" class="input-group input-group-lg">
                <h2>Nazwa ankiety</h2>
                <div class="col-lg-offset-1 col-lg-10 col-lg-offset-1">
                    <%= f.text_field :name, class: "form-control", placeholder: 'Nazwa ankiety' %>
                </div>
            </div>
            <div class="start-date">
                <h3>Data rozpoczęcia</h3>
                <%= f.text_field :start_date, class: "form-control", placeholder: 'Data rozpoczęcia' %>
            </div>
            <div class="end-date">
                <h3>Data zakończenia</h3>
                <%= f.text_field :end_date, class: "form-control", placeholder: 'Data zakończenia' %>
            </div>
            <div class="category-dropdown">
                <h3>Kategoria:</h3>
                <div class="form-group">
                    <%= f.collection_select(:category_id, Category.order('name'), :id, :name, {}, {:class=>"form-control category"}) %>
                </div>
            </div>
            <div class="survey-checkboxes">
                <h3>Ankietowani mają być pytani o:</h3>                
                <div class="checkbox">
                    <label>
                        <%= f.check_box :is_age_required %> wiek
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <%= f.check_box :is_sex_required %> płeć
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <%= f.check_box :is_education_required %> wykształcenie
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <%= f.check_box :is_location_required %> zamieszkanie
                    </label>
                </div>
            </div>
            <div class="survey-checkboxes">
                <h3>Wyniki będą dostępne dla:</h3>
                <div class="checkbox">
                    <label>
                        <%= f.check_box :is_public %> ankietowanych
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <%= f.check_box :is_available_for_all %> wszystkich
                    </label>
                </div>
            </div>
            <%= render 'question' %>
        </div>
        <div>
            <div id="new-question">
                <a href="javascript:;" id="add_new_question" class="btn btn-default">Nowe Pytanie</a>
            </div>
            <div>
                <%= f.submit "Zapisz ankietę", class: "btn btn-primary btn-lg"%>
            </div>
        </div>
        <% end %>

            <div style="display: none;" id="new_question">
                <%= render 'question' %>
            </div>
            <div style="display: none;" id="new_answer">
                <%= render 'answer' %>
            </div>
</div>